<?xml version="1.0" encoding="utf-8"?>
<!-- Represents the first fragment of the gallery view pager. Shows the menu. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary">

            <Button
                android:id="@+id/action_hot_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/action_search_posts"
                android:background="@color/colorPrimaryDark"
                android:text="Hot posts"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/action_search_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/action_newest_posts"
                android:background="@color/colorPrimaryDark"
                android:text="Search for posts"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/action_newest_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="40dp"
                android:layout_above="@+id/action_upload"
                android:background="@color/colorPrimaryDark"
                android:text="Nieuwste weerberichten"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/action_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="20dp"
                android:layout_above="@+id/action_settings"
                android:background="@color/colorPrimaryDark"
                android:text="Upload"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/action_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="50dp"
                android:background="@color/colorPrimaryDark"
                android:text="Settings"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="39dp"
                android:padding="40dp"
                android:src="@drawable/logo" />
        </RelativeLayout>

    </RelativeLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner" />

</LinearLayout>